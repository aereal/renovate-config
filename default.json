{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":masterIssue",
    ":prConcurrentLimit10",
    ":separateMultipleMajorReleases",
    ":timezone(Asia/Tokyo)"
  ],
  "ignorePresets": [
    ":prConcurrentLimit20"
  ],
  "labels": [
    "renovate"
  ],
  "postUpdateOptions": [
    "yarnDedupeHighest",
    "gomodTidy"
  ],
  "npm": {
    "rangeStrategy": "bump"
  },
  "pin": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "datasources": ["npm"],
      "labels": ["kind:npm"]
    },
    {
      "datasources": ["go"],
      "labels": ["kind:go"]
    },
    {
      "packagePatterns": [
        "^@types/"
      ],
      "automerge": true,
      "major": {
        "automerge": false
      }
    },
    {
      "groupName": "linters",
      "packageNames": [
        "prettier"
      ],
      "packagePatterns": [
        "^eslint",
        "^@typescript-eslint/"
      ]
    },
    {
      "groupName": "testing", 
      "packagePatterns": [
        "^@testing-library/"
      ],
      "automerge": true,
      "major": {
        "automerge": false
      }
    },
    {
      "groupName": "aws-cdk",
      "packagePatterns": [
        "^@aws-cdk/",
        "aws-cdk"
      ],
      "automerge": true,
      "major": {
        "automerge": false
      }
    }
  ]
}
